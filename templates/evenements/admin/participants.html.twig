{% extends 'base.html.twig' %}

{% block title %}Participants de l'événement{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center text-primary mb-4">Participants de l'événement "{{ event.title }}"</h1>

        <div class="row">
            <div class="col-12">
                {% if participants is not empty %}
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Email</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for participant in participants %}
                            <tr>
                                <td>{{ participant.lastName }}</td>
                                <td>{{ participant.firstName }}</td>
                                <td>{{ participant.email }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <div class="alert alert-warning" role="alert">
                        Aucun participant inscrit pour cet événement.
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="mt-4 d-flex justify-content-between">
            <div>
                <a href="{{ path('app_events') }}" class="btn btn-primary">Retour à la liste des événements</a>
                <a href="{{ path('app_admin_event_edit', {id: event.id}) }}" class="btn btn-secondary">Modifier l'événement</a>
            </div>
            <div>
                <a href="{{ path('app_admin_event_participants_excel', {id: event.id}) }}" class="btn btn-success">Télécharger en Excel</a>
            </div>
        </div>
    </div>
{% endblock %}
