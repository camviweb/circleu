{% extends 'base.html.twig' %}

{% block title %}Inscription - {{ event.title }}{% endblock %}

{% block stylesheets %}
    <style>
        .form-container {
            max-width: 500px;
            margin: 40px auto;
            padding: 20px;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            color: #2C4A9A;
            font-size: 22px;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            font-weight: bold;
            color: #333;
            display: block;
            margin-bottom: 5px;
        }

        /* Blue border for input fields */
        input {
            width: 100%;
            padding: 10px;
            border: 2px solid #2C4A9A; /* Blue border */
            border-radius: 5px;
            font-size: 14px;
            outline: none;
        }

        /* Highlight input on focus */
        input:focus {
            border-color: #1f3475; /* Darker blue on focus */
            box-shadow: 0px 0px 5px rgba(44, 74, 154, 0.5); /* Soft glow effect */
            transition: 0.3s ease-in-out;
        }

        small {
            display: block;
            text-align: center;
            margin-top: 10px;
            color: #666;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="form-container">
        <h1>Fantastic workshops - online</h1>

        {{ form_start(form) }}
            <div class="form-group">
                {{ form_row(form.nom, { 'attr': {'readonly': 'readonly'} }) }}
            </div>
            <div class="form-group">
                {{ form_row(form.prenom, { 'attr': {'readonly': 'readonly'} }) }}
            </div>
            <div class="form-group">
                {{ form_row(form.email, { 'attr': {'readonly': 'readonly'} }) }}
            </div>
            <div class="form-group">
                {{ form_row(form.formation, { 'attr': {'readonly': 'readonly'} }) }}
            </div>
            <div class="form-group">
                {{ form_row(form.niveau, { 'attr': {'readonly': 'readonly'} }) }}
            </div>
            <div>
                {{ form_row(form.submit, { 'attr': {'class': 'btn btn-primary w-100'} }) }}
            </div>
        {{ form_end(form) }}
        <small>Ces informations proviennent de votre compte Paris Cit√©.</small>
    </div>
{% endblock %}
