                            <div id="comments-container-{{ post.id }}">
                                {% for comment in post.comments[:3] %}
                                    <div class="card mt-3 p-3 comment-{{ post.id }}">
                                        <div class="d-flex align-items-center">
                                            <img src="{{ asset('images/user_icon.png') }}" class="rounded-circle me-2"
                                                 width="30" height="30" alt="Avatar utilisateur">
                                            <div class="d-flex flex-column">
                                                <h6 class="fw-bold mb-0 text-primary">{{ comment.user.getFullName }}</h6>
                                                <small class="text-muted">{{ comment.createdDate|date('d/m/Y H:i') }}</small>
                                            </div>
                                        </div>
                                        <p class="mt-2 mb-0">{{ comment.content }}</p>
                                    </div>
                                {% endfor %}
                            </div>

                            <div id="hidden-comments-{{ post.id }}" style="display: none;">
                                {% for comment in post.comments[3:] %}
                                    <div class="card mt-3 p-3 comment-{{ post.id }}">
                                        <div class="d-flex align-items-center">
                                            <img src="{{ asset('images/user_icon.png') }}" class="rounded-circle me-2"
                                                 width="30" height="30" alt="Avatar utilisateur">
                                            <h6 class="fw-bold mb-0 text-primary">{{ comment.user.getFullName }}</h6>
                                        </div>
                                        <p class="mt-2 mb-0">{{ comment.content }}</p>
                                        <small class="text-muted">{{ comment.createdDate|date('d/m/Y H:i') }}</small>
                                    </div>
                                {% endfor %}
                            </div>
                            {% if post.comments|length > 3 %}
                                <button class="btn btn-link text-primary" id="toggle-btn-{{ post.id }}"
                                        onclick="toggleComments({{ post.id }})">Voir plus
                                </button>
                            {% endif %}
                        {% else %}
                            <p>Aucun commentaire pour ce post.</p>
                        {% endif %}
                        #}

                        <!-- Formulaire pour ajouter un commentaire -->
                        {{ form_start(forms[post.id], {'action': path('app_comment_add', {'id': post.id}), 'method': 'POST'}) }}
                        {{ form_widget(forms[post.id]) }}
                        {{ form_end(forms[post.id]) }}
                    </div>
                </div>
            </div>
        {% else %}
            <p class="no-post-message text-center">Aucun post à afficher pour le moment.</p>
        {% endfor %}
    </div>

{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/picture_in_post.css') }}">

    <style>
        .no-post-message {
            font-size: 1.5rem;
            color: #04649C;
            margin-top: 50px;
        }
    </style>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/picture_in_post.js') }}"></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {

            // Fonction pour filtrer les posts selon les deux critères (catégorie et but)
            function filterPosts() {
                let selectedCategory = $(".category-filter.btn-primary").data("category") || "";  // Récupère la catégorie sélectionnée
                let selectedPurpose = $(".purpose-filter.btn-primary").data("purpose") || "";  // Récupère le but sélectionné

                $(".post-card").each(function () {
                    let postCategory = $(this).data("category");
                    let postPurpose = $(this).data("purpose");

                    // Si le post correspond à la catégorie ET au but sélectionnés (ou aucun filtre si "Tous" est sélectionné)
                    if ((selectedCategory === "" || postCategory === selectedCategory) &&
                        (selectedPurpose === "" || postPurpose === selectedPurpose)) {
                        $(this).show(); // Afficher le post si les deux critères correspondent
                    } else {
                        $(this).hide(); // Sinon, cacher le post
                    }
                });
            }

            // Filtre pour les catégories
            $(".category-filter").on("click", function () {
                if ($(this).data("category") === "") {
                    // Si "Tous catégories" est cliqué, laisser le bouton "Tous" en dark et désélectionner les autres
                    $(".category-filter").removeClass("btn-primary").addClass("btn-light");
                    $(this).removeClass("btn-light").addClass("btn-primary");
                } else {
                    // Sélectionner/Désélectionner la catégorie et laisser "Tous" en dark
                    $(this).toggleClass("btn-light btn-primary");
                    $(".category-filter[data-category='']").removeClass("btn-primary").addClass("btn-light");
                }

                // Vérifier si tous les filtres sont décochés pour réactiver "Tous"
                checkIfAllDeselected();

                // Appliquer le filtrage après avoir modifié l'état du bouton
                filterPosts();
            });

            // Filtre pour les buts
            $(".purpose-filter").on("click", function () {
                if ($(this).data("purpose") === "") {
                    // Si "Tous buts" est cliqué, laisser le bouton "Tous" en dark et désélectionner les autres
                    $(".purpose-filter").removeClass("btn-primary").addClass("btn-light");
                    $(this).removeClass("btn-light").addClass("btn-primary");
                } else {
                    // Sélectionner/Désélectionner le but et laisser "Tous" en dark
                    $(this).toggleClass("btn-light btn-primary");
                    $(".purpose-filter[data-purpose='']").removeClass("btn-primary").addClass("btn-light");
                }

                // Vérifier si tous les filtres sont décochés pour réactiver "Tous"
                checkIfAllDeselected();

                // Appliquer le filtrage après avoir modifié l'état du bouton
                filterPosts();
            });

            // Fonction pour vérifier si tous les filtres sont décochés
            function checkIfAllDeselected() {
                let categorySelected = $(".category-filter.btn-primary").length > 0;  // Vérifie si un filtre catégorie est sélectionné
                let purposeSelected = $(".purpose-filter.btn-primary").length > 0;    // Vérifie si un filtre but est sélectionné

                // Si aucun filtre catégorie et but n'est sélectionné, réactiver "Tous"
                if (!categorySelected) {
                    $(".category-filter[data-category='']").removeClass("btn-light").addClass("btn-primary");
                }

                if (!purposeSelected) {
                    $(".purpose-filter[data-purpose='']").removeClass("btn-light").addClass("btn-primary");
                }
            }

        });
    </script>

