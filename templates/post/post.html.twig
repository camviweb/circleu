{% extends 'base.html.twig' %}

{% block title %}Créer un nouveau Post{% endblock %}

{% block body %}
    <h1 class="form-title">Créer un nouveau Post</h1>

    {{ form_start(form, {'attr': {'class': 'post-form'}}) }}
        <div class="form-group">
            {{ form_label(form.category, 'Catégorie') }}
            <div class="dropdown-container">
                {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
                <i class="fas fa-chevron-down dropdown-icon"></i> <!-- Flèche pour indiquer un menu déroulant -->
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.purpose, 'But') }}
            <div class="dropdown-container">
                {{ form_widget(form.purpose, {'attr': {'class': 'form-control'}}) }}
                <i class="fas fa-chevron-down dropdown-icon"></i> <!-- Flèche pour indiquer un menu déroulant -->
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.description, 'Description') }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.picture, 'Image (optionnelle)') }}
            {{ form_widget(form.picture, {'attr': {'class': 'form-control'}}) }}
        </div>


        <button type="submit" class="btn btn-primary">Créer le Post</button>
    {{ form_end(form) }}

    <!-- Bouton Retour vers la liste des posts -->
    <div class="text-center mt-3">
        <a href="{{ path('app_blog') }}" class="btn btn-secondary">Retour vers la liste des Posts</a>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        .form-title {
            color: #04649C;
            text-align: center;
            margin-bottom: 20px;
        }

        .post-form {
            max-width: 500px;
            margin: 0 auto;
            padding: 30px;
            background-color: #f7f7f7;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border-radius: 4px;
            border: 1px solid #ddd;
            box-sizing: border-box;
        }

        .form-control:focus {
            border-color: #04649C;
            outline: none;
        }

        .btn-primary {
            background-color: #04649C;
            border: none;
            color: white;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            width: 100%;
            font-size: 16px;
        }

        .btn-primary:hover {
            background-color: #035a78;
        }

        .btn-secondary {
            background-color: #6c757d;
            border: none;
            color: white;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            width: auto;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

        .mt-3 {
            margin-top: 1em;
        }

        .text-center {
            text-align: center;
        }

        .dropdown-container {
            position: relative;
            display: inline-block;
        }

        .dropdown-icon {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            color: #aaa;
        }
    </style>
{% endblock %}
